<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:id="@+id/ly_top_bar"
        android:background="#d3d7d4"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:id="@+id/txt_topbar"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#4f5555"
            android:text="信息"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <View
            android:background="#999d9c"
            android:layout_width="match_parent"
            android:layout_height="2px"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ly_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_bg"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_ic_1"
            android:gravity="center"
            android:padding="5dp"
            android:text="小轿车"
            android:textColor="@drawable/tab_text"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/txt_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_bg"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_ic_2"
            android:gravity="center"
            android:padding="5dp"
            android:text="轮船"
            android:textColor="@drawable/tab_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_bg"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_ic_3"
            android:gravity="center"
            android:padding="5dp"
            android:text="摩托"
            android:textColor="@drawable/tab_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_bg"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_ic_4"
            android:gravity="center"
            android:padding="5dp"
            android:text="跑步"
            android:textColor="@drawable/tab_text"
            android:textSize="16sp"/>
    </LinearLayout>
    <View
        android:id="@+id/div_tab_bar"
        android:background="#d3d7d4"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_above="@id/ly_tab_bar"/>
    <FrameLayout
        android:id="@+id/ly_content"
        android:layout_below="@id/ly_top_bar"
        android:layout_above="@id/ly_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</RelativeLayout>